    <LinearLayout
      android:id="@+id/order3_info"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="15dp"
      android:orientation="vertical">

      <TextView
        android:id="@+id/item3_name"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order #543IO"
        android:textSize="25sp"
        tools:text="Order #2442SD"/>

      <TextView
        android:id="@+id/order3_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/01/20"
        android:textSize="15sp"
        tools:text="12/3/20"/>

      <TextView
        android:id="@+id/item3_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.99"
        android:textSize="15sp"
        tools:text="$44.99"/>

    </LinearLayout>

    <LinearLayout
      android:id="@+id/order3_fulfilled_box"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_margin="15dp">

      <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="10dp"/>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/order_fulfilled"
        android:textAlignment="center"/>

    </LinearLayout>

  </LinearLayout>

